{
  "name": "react-n-forms",
  "private": true,
  "version": "0.0.0-alpha.0",
  "homepage": "https://github.com/diogomartino/react-n-forms",
  "repository": "https://github.com/diogomartino/react-n-forms",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "lint": "eslint ./lib --ext ts,tsx",
    "lint:fix": "eslint ./lib --ext ts,tsx --report-unused-disable-directives --fix",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"**/*.ts*\" --config ./.prettierrc.json",
    "magic": "pnpm run lint:fix && pnpm run format && pnpm run check-types"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.18.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier-plugin-organize-imports": "^4.0.0",
    "@eslint/js": "^9.9.0",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "typescript": "^5.5.3",
    "tsc-alias": "^1.8.10"
  }
}
